      "sections": [
        {
          "name": "",
          "label": "Spot Assessment",
          "schema": {
            "title": "",
            "type": "object",
            "properties": {
              "spot-assessment": {
                "type": "object",
                "title": "Spot Assessment",
                "properties": {
                  "questionSource": {
                    "title": "Choose source of questions for conducting written spot assessments",
                    "type": "string",
                    "default": "diksha",
                    "enum": ["diksha", "khan-academy"],
                    "enumNames": ["Diksha", "Khan Academy"]
                  },
                  "questionSourceOral": {
                    "title": "Choose source of questions for conducting oral spot assessments",
                    "type": "string",
                    "default": "google-read-along",
                    "enum": ["google-read-along"],
                    "enumNames": ["Google Read Along"]
                  },
                  "limitOfNumberOfQuestions": {
                    "title": "Set the limit of number of questions for written spot assessments",
                    "type": "number",
                    "default": 5,
                    "enum": [5, 6, 7, 8, 9, 10],
                    "enumNames": [5, 6, 7, 8, 9, 10]
                  },
                  "dataPoints": {
                    "title": "Select data to be included in the spot assessment report",
                    "type": "array",
                    "default": [
                      "overall-class-participation",
                      "100%-achievers",
                      "student-wise-assesment"
                    ],
                    "items": {
                      "type": "string",
                      "enum": [
                        "overall-class-participation",
                        "100%-achievers",
                        "student-wise-assesment"
                      ],
                      "enumNames": [
                        "Overall Class Participation",
                        "100% Achievers",
                        "Student-wise Assesment"
                      ]
                    },
                    "uniqueItems": true
                  },
                  "allowDownloadSpotAssessmentReport": {
                    "title": "Allow download of spot assessment report",
                    "type": "boolean",
                    "default": true
                  },
                  "allowSharingSpotAssessmentReport": {
                    "title": "Allow sharing of spot assessment report",
                    "type": "boolean",
                    "default": true
                  },
                  "allowSendingNotificationSpotAssessment": {
                    "title": "Allow sending notifications to students regarding spot assessments",
                    "type": "boolean",
                    "default": true
                  },
                  "channelNotificationSpotAssessmentList": {
                    "title": "Select channels through which notifications can be sent for spot assessments",
                    "type": "array",
                    "default": ["sms", "whatsApp", "telegram"],
                    "items": {
                      "type": "string",
                      "enum": ["sms", "whatsApp", "telegram"],
                      "enumNames": ["SMS", "WhatsApp", "Telegram"]
                    },
                    "uniqueItems": true
                  }
                }
              }
            }
          }
        },
